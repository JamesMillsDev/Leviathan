<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>Leviathan.Physics</AssemblyName>
        <RootNamespace>Leviathan</RootNamespace>
        <LangVersion>default</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\LeviathanMathematics\LeviathanMathematics.csproj" />
        <ProjectReference Include="..\Leviathan\Leviathan.csproj" />
    </ItemGroup>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <Exec Command="copy /Y &quot;$(TargetDir)$(TargetName).dll&quot; &quot;$(SolutionDir)Templates\LeviathanTemplateProject\Dependencies\$(TargetName).dll&quot;;" />
    </Target>

</Project>
